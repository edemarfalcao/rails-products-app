<div class="flex justify-center items-center">
  <div class="w-full max-w-sm bg-white p-8 rounded-md shadow-md">
    <h2 class="text-2xl font-bold mb-4">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full", method: :post }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:border-blue-400" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:border-blue-400" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <label class="flex items-center">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <span class="text-gray-700 font-semibold">Remember me</span>
          </label>
        </div>
      <% end %>
      <div class="mt-4">
        <%= f.button "Log in", type: "submit", class: "w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
