<div class="flex justify-center items-center">
  <div class="w-full max-w-sm bg-white p-8 rounded-md shadow-md">
    <h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:border-blue-400" %>
      </div>
      <div class="mt-4">
        <%= f.submit "Send me reset password instructions", class: "w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
